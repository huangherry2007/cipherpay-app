{
  "name": "cipherpay-app",
  "version": "0.1.0",
  "private": true,
  "description": "CipherPay Application - Privacy-preserving payment platform",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build",
    "build:sdk": "pnpm --filter @cipherpay/sdk build",
    "build:server": "pnpm --filter @cipherpay/server build",
    "build:ui": "pnpm --filter @cipherpay/ui build",
    "dev": "concurrently -n server,ui -c blue,green \"pnpm dev:server\" \"pnpm dev:ui\"",
    "dev:server": "pnpm --filter @cipherpay/server dev",
    "dev:ui": "pnpm --filter @cipherpay/ui dev",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prisma:gen": "pnpm --filter @cipherpay/server prisma:gen",
    "prisma:pull": "pnpm --filter @cipherpay/server prisma:pull",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@8.15.0"
}
